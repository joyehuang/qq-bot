// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// 用户表
model User {
  id              Int           @id @default(autoincrement())
  qqNumber        String        @unique @map("qq_number")
  nickname        String
  streakDays      Int           @default(0) @map("streak_days")      // 当前连续打卡天数
  maxStreak       Int           @default(0) @map("max_streak")       // 历史最长连续天数
  lastCheckinDate DateTime?     @map("last_checkin_date")            // 最后打卡日期
  dailyGoal       Int?          @map("daily_goal")                   // 每日目标（分钟）
  aiStyle         String        @default("encourage") @map("ai_style") // AI 风格：encourage/strict/funny/professional/ridicule/teacher
  studyStyle      String        @default("teacher") @map("study_style") // 学习风格（默认 teacher）
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")
  checkins        Checkin[]
  achievements    Achievement[]
  studyPlans      StudyPlan[]                              // 学习计划关联

  @@map("users")
}

// 打卡记录表
model Checkin {
  id          Int      @id @default(autoincrement())
  userId      Int      @map("user_id")
  groupId     String   @map("group_id")
  duration    Int      // 时长（分钟）
  content     String   // 打卡内容
  isLoan      Boolean  @default(false) @map("is_loan") // 是否是贷款打卡
  category    String?  // 一级分类：学习、工作、运动、娱乐、其他
  subcategory String?  // 二级分类：计算机、英语、其他学习等
  createdAt   DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id])

  @@map("checkins")
}

// 功能建议表
model Suggestion {
  id        Int      @id @default(autoincrement())
  qqNumber  String   @map("qq_number")
  nickname  String
  groupId   String   @map("group_id")
  content   String   // 建议内容
  status    String   @default("pending") // pending, accepted, rejected, completed
  createdAt DateTime @default(now()) @map("created_at")

  @@map("suggestions")
}

// 用户成就表
model Achievement {
  id           Int      @id @default(autoincrement())
  userId       Int      @map("user_id")
  achievementId String  @map("achievement_id") // 成就标识符
  unlockedAt   DateTime @default(now()) @map("unlocked_at")

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, achievementId])
  @@map("achievements")
}

// ==================== 学习系统表 ====================

// 学习项目表（如：minimind, minimind2 等）
model StudyProject {
  id          String    @id @default(uuid())
  projectKey  String    @unique @map("project_key") // "minimind", "minimind2"
  name        String    // "MiniMind 学习计划"
  description String?   // 项目描述
  isActive    Boolean   @default(true) @map("is_active")
  config      String?   // 学习路径配置（JSON 格式）
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  plans       StudyPlan[]

  @@map("study_projects")
}

// 用户学习计划表
model StudyPlan {
  id              String      @id @default(uuid())
  userId          Int         @map("user_id")
  projectId       String      @map("project_id")
  currentModule   String      @default("") @map("current_module") // 当前模块 ID
  currentStep     String      @default("") @map("current_step")   // 当前步骤 ID
  moduleProgress  Int         @default(0) @map("module_progress")  // 模块进度 %
  totalProgress   Int         @default(0) @map("total_progress")   // 总进度 %
  reminderEnabled Boolean     @default(true) @map("reminder_enabled")
  joinedAt        DateTime    @default(now()) @map("joined_at")
  lastActiveAt    DateTime?   @map("last_active_at")

  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  project         StudyProject @relation(fields: [projectId], references: [id], onDelete: Cascade)
  checkpoints     StudyCheckpoint[]

  @@unique([userId, projectId])
  @@index([userId])
  @@index([projectId])
  @@map("study_plans")
}

// 学习打卡记录表
model StudyCheckpoint {
  id          String    @id @default(uuid())
  planId      String    @map("plan_id")
  module      String    // 模块 ID
  step        String    // 步骤 ID
  content     String?   // 学习内容/心得
  duration    Int       // 时长（分钟）
  checkinId   Int?      @map("checkin_id") // 关联到通用 Checkin.id
  completedAt DateTime  @default(now()) @map("completed_at")

  plan        StudyPlan @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@index([planId])
  @@index([completedAt])
  @@map("study_checkpoints")
}
