// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// 用户表
model User {
  id              Int           @id @default(autoincrement())
  qqNumber        String        @unique @map("qq_number")
  nickname        String
  streakDays      Int           @default(0) @map("streak_days")      // 当前连续打卡天数
  maxStreak       Int           @default(0) @map("max_streak")       // 历史最长连续天数
  lastCheckinDate DateTime?     @map("last_checkin_date")            // 最后打卡日期
  dailyGoal       Int?          @map("daily_goal")                   // 每日目标（分钟）
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")
  checkins        Checkin[]
  achievements    Achievement[]

  @@map("users")
}

// 打卡记录表
model Checkin {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  groupId   String   @map("group_id")
  duration  Int      // 时长（分钟）
  content   String   // 打卡内容
  isLoan    Boolean  @default(false) @map("is_loan") // 是否是贷款打卡
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id])

  @@map("checkins")
}

// 功能建议表
model Suggestion {
  id        Int      @id @default(autoincrement())
  qqNumber  String   @map("qq_number")
  nickname  String
  groupId   String   @map("group_id")
  content   String   // 建议内容
  status    String   @default("pending") // pending, accepted, rejected, completed
  createdAt DateTime @default(now()) @map("created_at")

  @@map("suggestions")
}

// 用户成就表
model Achievement {
  id           Int      @id @default(autoincrement())
  userId       Int      @map("user_id")
  achievementId String  @map("achievement_id") // 成就标识符
  unlockedAt   DateTime @default(now()) @map("unlocked_at")

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, achievementId])
  @@map("achievements")
}
